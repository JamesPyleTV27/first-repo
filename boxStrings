
def makeTheBox(string):
  listOfWords = []
  listOfWords.append(string.split())
  longestWord = 0 
  for i in len(listOfWords)
    if len(i) > longestWord:
      longestWord = i
  starCount=""
  for k in len(longestWord):
    starCount+="*"
  print(starCount)
  for j in listOfWords:
    print("*")
    print(j)
    print("*")
  print(starCount)
  
  
