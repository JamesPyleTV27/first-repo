
def makeTheBox(listOfWords):
  listOfWords = (listOfWords.split())
  
  longestWord = 0 
  
  for i in (listOfWords):
    if len(i) > longestWord:
      longestWord = len(i)
      
  starCount=""

  for k in range(longestWord + 4):
    starCount+="*"

  print(starCount)
  for j in listOfWords:
    print("* "+ j + " *")
    
  print(starCount)
  
makeTheBox("Hi im big grungus")
